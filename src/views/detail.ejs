<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: '¿?'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- product detail -->	
	<% producto.find((elemento)=>{ %>
             <% 
				if (elemento.id==id){%>
			
					<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Detalle del producto: <%= elemento.name %></h2>
			</div>
		</div>
		<div class="product-detail">
		
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/images/products/<%=elemento.image%>" alt="product image" class="product-detail-img">
					<p class="product-detail-description">
						<%= elemento.description%>
					</p>
				</div>
				<% if(elemento.discount>0){ %>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%=elemento.name%></h2>
						
							<p class="product-detail-price small">
								<span>$ <%= elemento.price %></span>
								/ 
								<b><%= elemento.discount %>% OFF</b>
							</p>
							<p class="product-detail-price">
								$<%=elemento.price -(elemento.price*elemento.discount/100)%>


							 
							</p>
							<p class="product-detail-price">
								$<%=elemento.price -(elemento.price*elemento.discount/100)%> 
							</p> <%}%>

							<% if(elemento.discount<=0){ %>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%=elemento.name%></h2>
						
							
							<p class="product-detail-price">
								$<%=elemento.price%>


							 
							</p>
							<p class="product-detail-price">
								$<%=elemento.price%>
							</p> <%}%>

						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pagá en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>

						<a href="#" class="buy-now-button">COMPRAR AHORA</a>
						<hr>

						<a href="/products/edit/<%=elemento.id%>" class="action-button edit">EDITAR PRODUCTO</a>
						<form action="/products/delete/<%=elemento.id%>?_method=DELETE" method="POST" style="display: inline-flex">
							<button type="submit" class="action-button delete">ELIMINAR</button>
						</form>
					</article>
				</div>
			</div>
		</div>
	</div>

			<%} %>
			<% }) %>
	
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

</body>	
</html>